<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/novel_image"
            android:layout_width="120dp"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/novel_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="编号"
                android:textColor="#888888"
                android:background="@drawable/edit_text_color"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/novel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="书名"
                android:textColor="#888888"
                android:textSize="16sp"
                android:background="@drawable/edit_text_color"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/novel_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="作者"
                android:textColor="#888888"
                android:textSize="16sp"
                android:background="@drawable/edit_text_color"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/novel_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="价格"
                android:textColor="#888888"
                android:textSize="14sp"
                android:background="@drawable/edit_text_color"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/novel_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="语言"
                android:textColor="#888888"
                android:textSize="14sp"
                android:background="@drawable/edit_text_color"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/novel_description"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/edit_text_color"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:hint="简介"
            android:textColor="#888888"
            android:textSize="14sp" />
        <!-- 保存和取消按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/book_edit_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="保存" />
            <Button
                android:id="@+id/book_edit_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="删除"
                android:textColor="#FF0000"

                />

            <Button
                android:id="@+id/book_edit_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>

